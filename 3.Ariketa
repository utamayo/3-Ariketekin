/* Programa: Suma y multiplicación de dos números (Solución 2) */

#include <stdio.h>

int main()
{
    int n1, n2; //Numero enteros

    printf( "Introduzca el primer numero (entero): " );
    scanf( "%d", &n1 );

    printf( "Introduzca el segundo numero (entero): " );
    scanf( "%d", &n2 );

    printf( "%d\n", n1 + n2 );
    printf( "%d", n1 * n2 );

    return 0;
}
